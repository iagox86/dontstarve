{{outlet}}
<hr />
<div style='display: none'>
  <h1>Ingredients</h1>
  <ul>
  {{#each-in ingredients as |ingredient count|}}
    <li>{{ingredient}} ({{count}})</li>
  {{/each-in}}
  </ul>
</div>

<h1>Expansions</h1>
<p>{{input type="checkbox" checked=expansions.dst}} Don't Starve Together</p>
<p>{{input type="checkbox" checked=expansions.rog}} Reign of Giants</p>
<p>{{input type="checkbox" checked=expansions.sw}} Shipwrecked</p>

<h1>Buildables</h1>
<ul>
  {{#each filtered_items as |buildable|}}
    <li>
      {{#link-to 'buildables.buildable' buildable}}{{buildable.name}}{{/link-to}} [{{buildable.expansion}}]
      <ul>
        {{#each buildable.components as |component|}}
          <li>{{component.item}} x {{component.quantity}}</li>
        {{/each}}
      </ul>
    </li>
  {{/each}}
</ul>
